<div class="row">
    <div class="col-lg-2 col-md-2">
         <div id="nextendaccordionmenuwidget-4" class="widget NextendAccordionMenuWidget">
         <div id="nextend-accordion-menu-nextendaccordionmenuwidget-4" class="">
        <div class="nextend-accordion-menu-inner ">
        <div class="nextend-accordion-menu-inner-container">
          <div class="left-nav-menu"></div>
        </div>
        </div>
        </div>
        </div>
  </div>  <!-- end left-nav -->

<div class="col-lg-10 col-md-10">
<div class='row' id='api_info'>
  {{#if info}}
  <div class="col-md-7 col-lg-7">
    <h1 class="info_title">{{info.title}}</h1>
  </div>
  <div class="col-md-5 col-lg-5">
  </div>
</div>
<div class="row" id="api_description">
  <div class="col-md-7 col-lg-7">
    <div class="info_description markdown">{{{info.description}}}</div>
    {{#if securityDefinitions}}
      <div class="security-definitions">
      <h3>Security</h3>
        {{#each securityDefinitions}}
        <h4 class="security-type">{{this.type}} Authentication</h4>
        <div class="markdown">{{this.description}}</div>
        {{/each}}
      </div>
    {{/if}}
  </div>
  <div class="col-md-5 col-lg-5">
  <div class="code-column">
    <h5>API Endpoint</h5>
    <pre>{{#each schemes}}{{this}}://{{../host}}{{../basePath}}{{/each}}</pre>
    </div>
  </div>
  
  {{/if}}

</div>
<div id='resources_container'>
  <ul id='resources'></ul>
</div>

  <div class="footer">
    <h4 style="color: #999">[ <span style="font-variant: small-caps">base url</span>: {{basePath}}
    {{#if info.version}}
  , <span style="font-variant: small-caps" data-sw-translate>api version</span>: {{info.version}}
    {{/if}}]
    {{#if validatorUrl}}
    <span style="float:right"><a href="{{validatorUrl}}/debug?url={{url}}"><img id="validator" src="{{validatorUrl}}?url={{url}}"></a>
    </span>
    </h4>
    {{/if}}
    {{#if info.license}}<div class='info_license'>Available under the <a href='{{info.license.url}}'>{{info.license.name}}</a> license</div>{{/if}}
    
      {{#if externalDocs}}
        <p>{{externalDocs.description}}</p>
        <a href="{{externalDocs.url}}" target="_blank">{{externalDocs.url}}</a>
        {{/if}}
        {{#if info.termsOfServiceUrl}}<div class="info_tos"><a href="{{info.termsOfServiceUrl}}" data-sw-translate>Terms of service</a></div>{{/if}}
      {{#if info.contact.name}}<div class='info_name' data-sw-translate>{{info.contact.name}}</div>{{/if}}
      {{#if info.contact.url}}<div class='info_url' data-sw-translate>See more at <a href="{{info.contact.url}}">{{info.contact.url}}</a></div>{{/if}}
      {{#if info.contact.email}}<div class='info_email'><a target="_parent" href="mailto:{{info.contact.email}}?subject={{info.title}}" data-sw-translate>Contact us</a></div>{{/if}}
    </div>
</div>
</div>
